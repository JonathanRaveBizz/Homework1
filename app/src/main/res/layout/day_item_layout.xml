<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="190dp">

    <ImageView
        android:id="@+id/the_days_image"
        android:layout_width="190dp"
        android:layout_height="190dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/the_fragments_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Day_text"
        app:layout_constraintEnd_toEndOf="@+id/the_days_image"
        app:layout_constraintStart_toStartOf="@+id/the_days_image"
        app:layout_constraintTop_toTopOf="@+id/the_days_image" />


    <Button
        android:id="@+id/the_days_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/day_button"
        app:layout_constraintBottom_toBottomOf="@+id/the_days_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>